.releases-list
  // padding: 0
  list-style-type: none
  .svg-defs
    display: none
  .release-list-item
    padding: 0
    margin-bottom: 40px
    h2
      margin: 0
    img
      width: 100%
    .release-info
      margin-bottom: 10px
      .release-date-id
        font-size: 14px
        color: #9B9B9B
    .release-container
      position: relative
      &:hover
        .release-overlay
          opacity: 1
          .release-more-info
            transform: translateX(-50%) translateY(-50%) rotate(0deg)

      .release-overlay
        position: absolute
        background-color: rgba(43,43,43,.75)
        top: 0
        width: 100%
        height: 100%
        opacity: 0

        .release-more-info
          position: absolute
          top: 50%
          left: 50%
          transform: translateX(-50%) translateY(-50%) rotate(-45deg)
          transition: opacity .2s ease-out, transform .3s ease-out

.transitionable
  .release-overlay
    transition: opacity .2s ease-out

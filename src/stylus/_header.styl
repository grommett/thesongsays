header
  padding: 20px
  overflow: hidden
  .logo
    float: left

    img
      display: block
      max-width: 236px
      height: auto
nav
  float: right
  margin-top: 20px
  ul
    padding: 0
    margin: 0
    overflow: hidden
    li
      list-style-type: none
      margin-left: 20px
      padding: 0
      float: left
      border-top: 1px solid #fff
      padding: 0 2px

      &:first-child
        margin-left: 0
      a
        color: #fff
        text-decoration: none
        line-height: 30px

doctype
block page
  html
    head
      block meta
        - description= (description || 'A Berlin-based label, established in 2009, revived in 2016. We like music that is intelligent, tender, and strange.')
        - image= (image || 'http://thesongsays.com/imgs/tss-social.jpg')
        - url = (url || 'http://thesongsays.com')
        - title = (title || 'thesongsays')
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no")
        meta(name="keywords" content="thesongsays")
        meta(name="twitter:card" content="summary_large_image")
        meta(name="twitter:title" content="#{title}")
        meta(name="twitter:description" content="#{description}")
        meta(name="twitter:image:src" content="#{image}")
        meta(itemprop="name" content="#{title}")
        meta(itemprop="description" content="#{description}")
        meta(itemprop="image" content="#{image}")
        meta(property="og:url" content="#{url}")
        meta(property="og:title" content="#{title}")
        meta(property="og:description" content="#{description}")
        meta(property="og:image" content="#{image}")
        
      link(type="text/css" rel="stylesheet" href="http://fast.fonts.net/cssapi/a4d674cf-646c-4823-b418-b1d9ea771fab.css")
      link(href='/css/styles.css', rel='stylesheet', type='text/css')
    title= pageTitle
    body
      include ../includes/menu
      div.page-content
        block contents
      include ../includes/footer
      block scripts
        //- global script
      block pagescripts
        script(src='/js/site.js')
      block analytics
        script.
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', 'UA-253253-5', 'auto');
          ga('send', 'pageview');
